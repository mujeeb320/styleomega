<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCatergoryActivity">

    <TextView
        android:id="@+id/catergory_slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Add Product"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/catergory_Linear_Layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/catergory_slogan"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">
        
        <ImageView
            android:id="@+id/Men"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/tshirts"

            />
        <TextView
            android:id="@+id/catergory_Type1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/Men"
            android:layout_marginTop="0dp"
            android:text="Men"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />




    </LinearLayout>

    <LinearLayout
        android:id="@+id/catergory_Linear_Layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/catergory_Linear_Layout1"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp" >



        <ImageView
            android:id="@+id/Women"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/female_dresses">
            
        </ImageView>

        <TextView
            android:id="@+id/catergory_Type2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/Men"
            android:layout_marginTop="0dp"
            android:text="Women"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/catergory_Linear_Layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/catergory_Linear_Layout2"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp" >

        <ImageView
            android:id="@+id/Kids"
            android:layout_width="98dp"
            android:layout_height="104dp"
            android:src="@drawable/kid"

            />
        <TextView
            android:id="@+id/catergory_Type3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/Men"
            android:layout_marginTop="0dp"
            android:text="Kids"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>



</RelativeLayout>